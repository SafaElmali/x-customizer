{
  "manifest_version": 3,
  "name": "X.com Customizer",
  "version": "1.0.0",
  "description": "Customize your X.com experience by hiding unwanted UI elements",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://x.com/*", "*://twitter.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "css": ["styles/hide.css"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}
